####### Hardware Stuff ########

# Monitors
# exec xrandr --output eDP-1 --output DP-3 --above eDP-1 --output DP-4 --left-of DP-3 --rotate left 

# exec xrandr --output eDP-1 --output DP-1 --above eDP-1 --output DP-2 --left-of DP-1
set $builtin eDP-1
set $first DP-1
set $second DP-2
set $third DP-3
set $fourth DP-4

