# Brightness settings
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --min-val=1 -q set 3%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 3%+


# Touchpad settings
exec xinput set-prop "PIXA3854:00 093A:0274 Touchpad" "libinput Tapping Enabled" 1

##### Pulse Audio ########

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status


set $mod Mod1

# Windows Settings 

default_border none
default_floating_border none
hide_edge_borders none
for_window [class="^.*"] border pixel 8

gaps outer 1
gaps inner 32

smart_borders on
smart_borders no_gaps

# set radius on how curved we want it to be
border_radius 15

# window colors: border background text
client.focused           #7851a9 #7851a9 #7851a9 #7851a9
client.focused_inactive  #7851a9 #7851a9 #7851a9 #7851a9
client.unfocused         #7851a9 #7851a9 #7851a9 #7851a9
client.urgent            #7851a9 #7851a9 #7851a9 #7851a9

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:DejaVu Sans Mono 20
font pango:DejaVu Sans Mono, Terminus Bold Semi-Condensed 20
font pango:Terminus 20px
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

